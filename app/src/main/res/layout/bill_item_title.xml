<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/billListView">

    <LinearLayout android:id="@+id/total_bill_oday_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/titleItemGrey"
        android:orientation="horizontal">
        <TextView android:id="@+id/total_bill_oday_bar_date"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:text="12月13日"/>

        <TextView android:id="@+id/total_bill_oday_bar_day"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center|center"
            android:text="周四"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView android:id="@+id/total_bill_oday_bar_spending"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center|center"
            android:text="支出:15.00"/>

        <TextView android:id="@+id/total_bill_oday_bar_income"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="center|center"
            android:text="收入:0.00"/>

    </LinearLayout>
</LinearLayout>