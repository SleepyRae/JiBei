<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.RegisterActivity"
              android:orientation="vertical"
              android:gravity="center_horizontal"
    android:background="@color/colorPrimary">


    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageView

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/jibei"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="记呗"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/whitesmoke"
                android:gravity="center_vertical"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家里有矿也要记账！"
                android:textColor="#797070"
                android:textSize="15sp"
                android:layout_marginTop="0dp"/>
    </LinearLayout>

    <LinearLayout
            android:background="@drawable/bg_edittext_focused"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/username"/>

        <EditText
                android:id="@+id/username_register"
                android:layout_marginLeft="5dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Username"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textColorHint="@color/white"
                android:background="@null"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
            android:background="@drawable/bg_edittext_focused"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/password"/>

        <EditText
                android:id="@+id/password_register"
                android:layout_marginLeft="5dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textColorHint="@color/white"
                android:background="@null"
            android:textColor="@color/white"/>

    </LinearLayout>



    <LinearLayout
            android:background="@drawable/bg_edittext_focused"
            android:layout_marginTop="30dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/password"/>

        <EditText
                android:id="@+id/compass_register"
                android:layout_marginLeft="5dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Confirm Password"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textColorHint="@color/white"
            android:textColor="@color/white"
                android:background="@null"/>

    </LinearLayout>


    <Button
            android:id="@+id/register"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="注册"
            android:textColor="@color/white"
            android:background="@drawable/button_radius_shape"
            android:elevation="3dp"
            />

    <TextView
            android:id="@+id/turn_to_login"
            android:layout_marginTop="3dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="已有账号？马上登录！"
            android:gravity="right"
            android:textColor="#1d87eb"
            android:textSize="15dp"
            />

</LinearLayout>
