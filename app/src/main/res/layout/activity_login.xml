<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".ui.LoginActivity"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <ImageView

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/jibei"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="记呗"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/darkslategrey"
                android:gravity="center_vertical"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家里有矿也要记账！"
                android:textColor="#797070"
                android:textSize="15sp"
                android:layout_marginTop="0dp"/>
    </LinearLayout>

    <LinearLayout
            android:background="@drawable/bg_edittext_focused"
            android:layout_marginTop="40dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/username"/>

        <EditText
                android:id="@+id/username_login"
                android:layout_marginLeft="5dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Username"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textColorHint="#797070"
                android:background="@null"/>

    </LinearLayout>

    <LinearLayout
            android:background="@drawable/bg_edittext_focused"
            android:layout_marginTop="20dp"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="5dp">

        <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/password"/>

        <EditText
                android:id="@+id/password_login"
                android:layout_marginLeft="5dp"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:hint="Password"
                android:maxLength="15"
                android:selectAllOnFocus="true"
                android:textSize="14sp"
                android:textColorHint="#797070"
                android:background="@null"/>

    </LinearLayout>


    <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:text="登录"
            android:textColor="@color/white"
            android:background="@drawable/button_radius_shape"
            android:elevation="3dp"
            />

    <TextView
            android:id="@+id/turn_to_register"
            android:layout_marginTop="3dp"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="没有账号？马上注册！"
            android:gravity="right"
            android:textColor="#1d87eb"
            android:textSize="15dp"/>


</LinearLayout>
